    <!--<aura:attribute name="displayAllObjects" type="Boolean" default="false" />-->
    <aura:attribute name="currentState" type="String" default="SEARCH" description="Options: SEARCH, ALL, SELECTED" />

    <!--<aura:registerEvent name="onAddObject" type="gvf2:ActionEvent" />-->

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <!--<aura:handler event="gvf2:UserGuideEvent" action="{!c.handleUserGuideEvent}"/>-->
    <!--<aura:handler name="change" value="{!v.allObjects}" action="{!c.onUpdateObjectPanel}" />-->
    <aura:handler name="change" value="{!v.searchTerm}" action="{!c.onUpdateSearchTerm}" />
    <!--<aura:handler name="change" value="{!v.displayAllObjects}" action="{!c.onToggleDisplayAll}" />-->
    <!--<aura:handler name="change" value="{!v.selectedEntities}" action="{!c.onUpdateObjectPanel}" />-->
    <aura:handler event="gvf2:DiagramUpdatedEvent" action="{!c.onDiagramUpdated}" />

    <!--<div>
        <div class="slds-float&#45;&#45;right">
